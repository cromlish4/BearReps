<h1>Search online catalog</h1>

<!--This is the form-->
<%= form_tag(scrapes_path, method: :get) do %>
  <%= text_field_tag(:set_search_campus_value, params[:set_search_campus_value], placeholder: "campus : columbus, marion, ...") %>
  <%= text_field_tag(:set_search_term_value, params[:set_search_term_value], placeholder: "term : spring/summer/autumn") %>
  <%= text_field_tag(:search, params[:search], placeholder: "example : cse 3901") %>
  <%= submit_tag("Scrape") %>
<% end %>

<!--Display scraper results-->
<% if @scraped_courses %>
  <% @scraped_courses.each do |course| %>
    <p class="title"><%= "CSE #{course[0]}" %></p>
    <% course[1].each do |attribute| %>
      <p>&emsp; <%= "#{attribute[0]} : #{attribute[1]}" %></p>
    <% end %>
  <% end %>
<% end %>
