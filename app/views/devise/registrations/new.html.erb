<div id = "Bear-Reps">A Bear Reps Product</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div id = "input">
    <!--Input Fields-->
    <div id="first-name" class="field">
      <%= f.label :"First Name" %><br />
      <%= f.text_field :fname,placeholder:"Brutus",autofocus: true %>
    </div>

    <div id="last-name" class="field">
      <%= f.label :"Last Name" %><br />
      <%= f.text_field :lname,placeholder:"Buckeye" %>
    </div>

    <div id="name-dot" class="field">
      <%= f.label :"Name dot number" %><br />
      <%= f.text_field :nameDotNumber,placeholder:"buckeye.1" %>
    </div>

    <div id="year" class="field">
      <%= f.label :"Year, only for Students" %><br />
      <%= f.text_field :year,placeholder:"Freshman, Sophomore, etc. " %>
    </div>

    <div id="email" class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, placeholder:"buckeye.1@osu.edu",autocomplete: "email" %>
    </div>

    <!--Via https://stackoverflow.com/questions/1956191/ruby-on-rails-drop-down-menu-->
    <div id="dropdown">
      <%= f.label :"Choose User type." %><br />
      <%= f.select :user_type, [['Student','student'],['Teacher','teacher'],['Admin','admin']] %>
    </div>

    <div id="password" class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div id="passwordC" class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

  </div>


  <div id="submission" class="actions">
    <%= f.submit "Create Account" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</body>
</html>
