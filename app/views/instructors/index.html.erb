
<!-- list all the instructors -->
<h1>Instructors</h1>

<table>
  <tr>
    <th>Name</th> <th>Email</th> <th colspan="3"></th>
<% @instructors.each do |instructor|%>
  <tr>
    <td><%= instructor.name %></td>
    <td><%= instructor.email %></td>
    <td><%= link_to "Show", instructor_path(instructor) %></td>
    <td><%= link_to "Edit", edit_instructor_path(instructor) %></td>
    <td><%= link_to "Destroy", instructor, method: :delete { confirm: "Are you sure?"}%></td>
  </tr>
<% end %>
</table>

<br/><%= link_to "New Instructor", new_instructor_path %>
