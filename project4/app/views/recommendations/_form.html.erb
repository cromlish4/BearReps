<!-- partial for generating a form (since this snippet is duplicated in new.html.erb and edit.html.erb) -->
<%= form_for @recommendation do |f| %>

<div class  ="student">
  <%= f.label :student %>
  <%= f.text_field :student %>
</div>

<div class = "course">
  <%= f.label :course %>
  <%= f.text_field :course %>
</div>

<div class = "section">
  <%= f.label :section %>
  <%= f.number_field :section %>
</div>

<%= f.submit "Submit" %>

<% end %>